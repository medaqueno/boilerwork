{
    "name": "medaqueno/boilerwork-example",
    "description": "PHP Swoole Boilerplate applying some basic patterns",
    "authors": [
        {
            "name": "Carlos Jim√©nez - medaqueno",
            "email": "medaqueno@gmail.com",
            "role": "Creator / Lead Developer"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^8.1.0",
        "medaqueno/boilerwork-kernel": "^0.1.0"
    },
    "require-dev": {
        "ext-decimal": "^1.1",
        "deminy/counit": "^0.2.0",
        "openswoole/ide-helper": "~4.9",
        "php-decimal/php-decimal": "^1.1",
        "php-decimal/stubs": "^1.1",
        "php-ds/php-ds": "^1.4",
        "phpmd/phpmd": "^2.12",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.4",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6",
        "ukko/phpredis-phpdoc": "5.0.1-beta8"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Bootstrap\\": "bootstrap/"
        },
        "files": [
            "bootstrap/functions.php"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "phpcs": [
            "vendor/bin/phpcs --standard=phpcs.xml"
        ],
        "stan": [
            "vendor/bin/phpstan analyse . --ansi --no-interaction --memory-limit=-1"
        ],
        "phpmd": [
            "vendor/bin/phpmd ./app ansi phpmd.xml"
        ],
        "analyse": [
            "@phpmd",
            "@stan",
            "@phpcs"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
